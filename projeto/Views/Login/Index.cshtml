@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"]="Farol-Social";

}


<!-- HERO SECTION -->
<section class="d-flex align-items-center" style="min-height: 75vh;">
    <div class="container">
        <div class="row align-items-center">

            <!-- Texto e CTA -->
            <div class="col-md-6 text-center text-md-start">

                <h1 class="fw-bold text-success mb-3">
                    Iluminando Caminhos,<br />
                    Conectando Propósitos.
                </h1>

                <p class="text-muted mb-4 fs-5">
                    Onde grandes ideias encontram apoio e se transformam em impacto real.
                </p>

                <a href="/Login/ProjetosVisitantes" class="btn btn-warning px-4 py-2 fw-bold">
                    Explore Projetos
                </a>

                <a href="https://wa.me/5511959696298?text=Gostei%20do%20movimento%20e%20quero%20fazer%20parte%21" class="btn btn-outline-success px-4 py-2 fw-bold ms-2">
                    Fale com a gente
                </a>
            </div>

            <!-- Imagem principal -->
            <div class="col-md-6 text-center">
                <img src="~/img/multiProjetos.png"
                     class="img-fluid"
                     style="width: 800px;" />
            </div>
        </div>
    </div>
</section>

<!-- COMO FUNCIONA -->
<section class="py-5 bg-light">
    <div class="container text-center">

        <h2 class="fw-bold mb-5 text-success">Como Funciona</h2>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="p-4 shadow-sm rounded bg-white h-100">
                    <h5 class="fw-bold">Encontre Projetos</h5>
                    <p class="text-muted mt-2">
                        Explore projetos sociais da sua região ou descubra novas iniciativas.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="p-4 shadow-sm rounded bg-white h-100">
                    <h5 class="fw-bold">Conecte-se</h5>
                    <p class="text-muted mt-2">
                        Converse com organizadores e faça parte de algo maior.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="p-4 shadow-sm rounded bg-white h-100">
                    <h5 class="fw-bold">Impacte Vidas</h5>
                    <p class="text-muted mt-2">
                        Transforme ideias em ações e ajude a iluminar caminhos.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- MAPA DE REGIÕES / FOCO LOCAL -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-md-6">
                <h2 class="fw-bold text-success mb-3">Encontre Projetos Perto de Você</h2>
                <p class="text-muted fs-5">
                    Descubra iniciativas que estão acontecendo <strong>no seu bairro</strong>,
                    organizadas por pessoas reais que estão transformando vidas todos os dias.
                </p>

                <a href="/Login/Mapa" class="btn btn-success fw-bold px-4 py-2">
                    Ver Projetos da Minha Região
                </a>
            </div>

            <div class="col-md-6 text-center">
                <img src="~/img/mapa.jpg" class="img-fluid" style="width: 400px;" />
            </div>

        </div>
    </div>
</section>
<!-- BENEFÍCIOS -->
<section class="py-5 bg-white">
    <div class="container text-center">
        <h2 class="fw-bold text-success mb-5">Por Que Usar o Farol Social?</h2>

        <div class="row g-4">
            <div class="col-md-3">
                <div class="p-3 shadow-sm rounded bg-light">
                    <h5 class="fw-bold mb-2">100% Gratuito</h5>
                    <p class="text-muted small">Para voluntários e organizações.</p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="p-3 shadow-sm rounded bg-light">
                    <h5 class="fw-bold mb-2">Projetos Reais</h5>
                    <p class="text-muted small">Iniciativas locais e verificadas.</p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="p-3 shadow-sm rounded bg-light">
                    <h5 class="fw-bold mb-2">Fácil de Usar</h5>
                    <p class="text-muted small">Encontre ou cadastre em segundos.</p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="p-3 shadow-sm rounded bg-light">
                    <h5 class="fw-bold mb-2">Impacto Real</h5>
                    <p class="text-muted small">Transforme vidas e sua comunidade.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA FINAL -->
<section class="py-5 text-center">
    <div class="container">
        <h2 class="fw-bold mb-3">Pronto para fazer a diferença?</h2>

        <a href="/Login/Login" class="btn btn-success btn-lg px-5 py-3">
            Começar Agora
        </a>
    </div>
</section>

