@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="row shadow rounded overflow-hidden" style="max-width: 900px; width:100%;">

        <!-- COLUNA DA IMAGEM -->
        <div class="col-md-6 p-0 d-none d-md-block">
            <img src="~/img/login/login.png"
                 class="img-fluid h-100 w-100"
                 style="object-fit: cover;" />
        </div>

        <!-- COLUNA DO FORM -->
        <div class="col-md-6 p-4 bg-white">

            <h3 class="text-center mb-4">Entrar</h3>

            @if (TempData["MensagemErro"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["MensagemErro"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-controller="Login" asp-action="Entrar" method="post">

                <div class="mb-3">
                    <label class="form-label">Login</label>
                    <input type="text" asp-for="Login" class="form-control" placeholder="Digite seu login">
                    @Html.ValidationMessageFor(x => x.Login)
                </div>

                <div class="mb-3">
                    <label class="form-label">Senha</label>
                    <input type="password" asp-for="Senha" class="form-control" placeholder="Digite sua senha">
                    @Html.ValidationMessageFor(x => x.Senha)
                </div>

                <button type="submit" class="btn btn-primary w-100">Entrar</button>

            </form>
        </div>

    </div>
</div>
