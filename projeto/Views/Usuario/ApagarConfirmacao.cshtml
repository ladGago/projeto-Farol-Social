@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação de Apagar o Usuário";
}



<div class="text-center">
    <h3>Realmente deseja apagar o usuario(@Model.Nome)?</h3>
</div> 

<a class="btn btn-primary w-100" role="button" asp-controller="Usuario" asp-action="Index">Cancelar Exclusão</a>
<br />
<a class="btn btn-danger w-100" role="button" asp-controller="Usuario" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar Exclusão</a>
